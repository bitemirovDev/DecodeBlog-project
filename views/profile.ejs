<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Decode</title>
    <link rel="stylesheet" href="/style/all.css">
</head>
<body>
    <%- include('partials/header.ejs') %>

    <div class="container">
        <div class="main">
            <div class="posts">
                <div class="profile-content-head">
                    <h2>Мои блоги</h2>
                    <div class="profile-btns">
                        <a class="blackButton" href="/favourites/<%=user.id%>">Избранное</a>
                        <a class="blueButton" href="/newBlog">Новый блог</a>
                    </div>
                    
                </div>
                <% 
                    blogs.forEach(item => {
                        if(user.id == item.author.id){
                %>
                    <div class="post">
                        <div class="post-img">
                            <img src="<%=item.image%>" alt="">
                        </div>
                        <div class="post-content">
                            <div class="post-content-main">
                                <h3> 
                                    <a class="post-title" href="/inPost/<%=item.id%>"><%=item.title%></a>
                                    <div class="dropdown">
                                        <button class="dropdownBtn">
                                            <img src="/images/icons/ellipsis-vertical-solid.svg" alt="">
                                        </button>
                                        <div class="dropdownContent">
                                            <a class="editDD" href="/editBlog/<%=item.id%>">Редактировать</a>
                                            <a class="deleteDD" href="#" onclick="deleteBlog('<%=item.id%>', '<%=item.author._id%>')">Удалить</a>
                                        </div>
                                    </div> 
                                </h3>
                                <p><%=item.description%></p> 
                            </div>
                            
                            <div class="post-info">
                                <p>
                                    <img src="/images/icons/calendar.svg" alt="">
                                    <%=item.date%>
                                </p>
                                <p>
                                    <img src="/images/icons/eye.svg" alt="">
                                    0
                                </p>
                                <p>
                                    <img src="/images/icons/comments.svg" alt="">
                                    0
                                </p>
                                <p>
                                    <img src="/images/icons/razdel.svg" alt="">
                                    <%=item.categ.name%>
                                </p>
                                <p>
                                    <img src="/images/icons/user.svg" alt="">
                                    <%=item.author.fullName%>
                                </p>
                            </div>
                        </div>
                    </div>   
                <%
                    }})
                %>
            </div>
           <div class="profile-right">
                <div class="profile-right-image">
                    <img src="<%=user.image%>" alt="">
                </div>
                <h3><%=user.fullName%></h3>
                <p><%=user.description%></p>
                <p><%=myBlogsCount%> постов за все время</p>
                <div class="profile_buttons">
                    <% 
                        if(user.id == loginUser.id){
                    %>
                        <a class="editButton" href="/editProfile/<%=user.id%>">Редактировать</a>
                        <a class="logoutButton" href="/api/signout">Выйти</a>
                    <%
                        }     
                    %>  
                </div>
           </div>
        </div>
    </div>
    
    <%-include('partials/scripts.ejs')%>

</body>
</html>